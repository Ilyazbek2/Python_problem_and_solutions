data = [['p', 'y', 't', 'h', 'o', 'n'], ['s', 't', 'e', 'p', 'i', 'k']]
result = list(map(lambda x: '.'.join(x), data))
print("Exercise 1 Result:", result[1])  # Output: s.t.e.p.i.k

# 2. Pretty print function
def pretty_print(data, side='-', delimiter='|'):
    """Prints the list with a framed border."""
    row = f" {f' {delimiter} '.join(map(str, data))} {delimiter} "
    border = side * len(row)
    print(border)
    print(row)
    print(border)

# Example usage
pretty_print([1, 2, 10, 23, 123, 3000])
pretty_print(['abc', 'def', 'ghi', '12345'])
pretty_print(['abc', 'def', 'ghi'], side='*')
pretty_print(['abc', 'def', 'ghi'], delimiter='#')
pretty_print(['abc', 'def', 'ghi'], side='*', delimiter='#')
